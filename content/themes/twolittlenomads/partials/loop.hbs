{{! Previous/next page links - only displayed on page 2+ }}
<div class="extra-pagination inner">
    {{pagination}}
</div>

{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
<article class="{{post_class}}">
    <hr class="post-date-line" />
    <time class="post-date with-line post-meta-text" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
    <i class="post-meta-text post-meta-icon fa fa-heart fa-2x"></i>
    <hr class="post-header-line top"/>
    <header class="post-header">
        <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
    </header>
    <hr class="post-header-line bottom"/>
    <div class="post-meta post-meta-text">
        {{tags}}
    </div>
    <section class="post-excerpt">
        <p>{{excerpt words="100"}} ... <a class="read-more" href="{{url}}">&raquo;</a></p>
    </section>
</article>
{{/foreach}}

{{! Previous/next page links - displayed on every page }}
{{pagination}}

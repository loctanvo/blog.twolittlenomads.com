{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}

<main class="content" role="main">
    <article id="{{url}}" class="blog-post">
    {{#if image}}
        <div class="post-header-image" style="background-image: url({{image}})"></div>
    {{else}}
        <hr class="post-date-line" />
    {{/if}}
    <nav class="main-nav">
            {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" /></a>{{/if}}
            {{#if @blog.navigation}}
                <a class="menu-button icon-menu" href="#"><span class="word">Menu</span></a>
            {{/if}}
        </nav>
    <div class="{{post_class}}">
        <div>
            <i class="post-meta-text post-meta-icon fa fa-heart fa-2x"></i>    
        </div>
        <hr class="post-header-line top"/>
        <header class="post-header">
            <h1 class="post-title">{{title}}</h1>
        </header>
        <hr class="post-header-line bottom"/>
        <section class="post-content">
            {{content}}
        </section>
        
    </div>
</article>
</main>

{{/post}}
